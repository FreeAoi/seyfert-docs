---
import type { Props } from '@astrojs/starlight/props';
import Sidebar from './newSidebar.astro';
---

<>
  <Sidebar {...Astro.props} />
  <main
    class={'min-h-[calc(100vh_-_56px)] bg-zinc-50 dark:bg-zinc-900 duration-300'}
  >
    <div class="docs-content-free-was-here-cumming">
      <header
        class="header sticky border-b border-gray-300 dark:border-[#2e2e32]"
      >
        <slot name="header" />
      </header>
      <div class="main-frame"><slot /></div>
    </div>
  </main>
</>

<style>
  .header {
    z-index: var(--sl-z-index-navbar);
    inset-inline-start: 0;
    inset-block-start: 0;
    width: 100%;
    height: var(--sl-nav-height);
    border-bottom: 1px solid var(--sl-color-hairline-shade);
    padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);
    padding-inline-end: var(--sl-nav-pad-x);
    background-color: var(--sl-color-mainframe-bg);
  }

  .main-frame {
    background-color: var(--sl-color-mainframe-bg);
  }

  .docs-content-free-was-here-cumming {
    @apply md:ml-80 ml-0;
  }
</style>
